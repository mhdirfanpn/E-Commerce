<main class="main">
  <section class="home-slider position-relative pt-50">
    <div class="hero-slider-1 dot-style-1 dot-style-1-position-1">
      <% i=0 %> <% banner?.forEach(banner=>{ %>

      <div class="single-hero-slider single-animation-wrap">
        <div class="container">
          <div class="row align-items-center slider-animated-1">
            <div class="col-lg-5 col-md-6">
              <div class="hero-slider-content-2">
                <h2 class="animated fw-900">Supper value deals</h2>
                <h1 class="animated fw-900 text-brand">
                  On all <%=banner?.name %>'s <%=banner?.description %>
                </h1>

                <a
                  class="animated btn btn-brush btn-brush-3"
                  href="/category/<%=proId[i]?._id%>"
                >
                  Shop Now
                </a>
              </div>
            </div>
            <div class="col-lg-7 col-md-6">
              <div class="single-slider-img single-slider-img-1">
                <!-- <h1><%=banner?._id %> </h1> -->
                <img
                  class="animated slider-1-1"
                  src="/addBanner/<%=banner?._id %>.jpg"
                  alt="banner image"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
      <%i++ }) %>
    </div>
  </section>

  <section
    class="product-tabs section-padding position-relative wow fadeIn animated"
  >
    <div class="bg-square"></div>
    <div class="container">
      <div class="tab-header">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item" role="presentation">
            <button
              class="nav-link active"
              id="nav-tab-one"
              data-bs-toggle="tab"
              data-bs-target="#tab-one"
              type="button"
              role="tab"
              aria-controls="tab-one"
              aria-selected="true"
            >
              categories
            </button>
          </li>
        </ul>
      </div>
      <!-- End nav-tabs -->
      <div class="tab-content wow fadeIn animated" id="myTabContent">
        <div
          class="tab-pane fade show active"
          id="tab-one"
          role="tabpanel"
          aria-labelledby="tab-one"
        >
          <div class="row product-grid-4">
            <% productArray?.forEach(element=>{ %>
            <div class="col-lg-3 col-md-4 col-12 col-sm-6">
              <div class="product-cart-wrap mb-30">
                <div class="product-img-action-wrap">
                  <div class="product-img product-img-zoom">
                    <a href="/category/<%=element?._id %>">
                      <img
                        class="default-img"
                        src="/productImages/<%=element?._id %>0.jpg"
                        alt=""
                      />
                    </a>
                  </div>
                  <div class="product-action-1"></div>
                </div>
                <div class="product-content-wrap">
                  <h2>
                    <a style="color: #0c0551" href="shop-product-right.html"
                      ><%=element?.category %></a
                    >
                  </h2>
                  <div class="product-action-1 show"></div>
                </div>
              </div>
            </div>

            <% }) %>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
