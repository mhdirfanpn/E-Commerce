


<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Products List</h2>
         
        </div>
        <div>

            <a href="add-product" class="btn btn-primary btn-sm rounded">Add product</a>
        </div>
    </div>
    <div class="card mb-4">
        <header class="card-header">
            <div class="row align-items-center">
            
            </div>
        </header> <!-- card-header end// -->
        <div class="card-body">
            <div class="table-responsive" id="example">

                <table class="table table-hover" id="">
                  <thead>
                    <tr>
                        <!-- <th>No</th> -->
                      <th>Name</th>
                      <th>Category</th>
                      <th>Description</th>
                      <th>Price</th>
                      <th>Stock</th>
                      <th>Registered</th>
                      <th class="text-end">Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% let i=1 %> 
                    <% productDetails?.forEach(product=>{ %>
        
                    <tr>
                    
                      <td width="30%">
                        <a href="#" class="itemside">
                            <div class="left">
                                <img style="width: 50px; height: 50px;" src="/productImages/<%=product?._id %>0.jpg"  alt="" />
                            </div>
                          <div class="info pl-3 ">
                            
                            <h6 class="mb-0 title"><%=product?.name %></h6>
                          </div>
                        </a>
                      </td>

                      <td>
                        <div class="info">
                          <p class="mb-0 title"><%=product?.category %></p>
                        </div>
                      </td>


                      <td>
                        <div class="info">
                          <p class="mb-0 title"><%=product?.description %></p>
                        </div>
                      </td>
  
                      
                      <td>
                        <div class="info">
                          <p class="mb-0 title">â‚¹ <%=product?.price %></p>
                        </div>
                      </td>

                      <td>
                        <div class="info">
                          <p class="mb-0 title"><%=product?.stock %></p>
                        </div>
                      </td>
                     
                      <td><%=product?.date %></td>
                      <td class="text-end">
                        <a href="/admin/edit-product/<%=product?._id %>" class="btn btn-sm btn-brand rounded font-sm mt-15"
                          >Edit</a
                        >
                        <a href="/admin/delete-product/<%=product?._id %> " class="btn btn-sm btn-brand rounded font-sm mt-15" onclick="return confirm('Are you sure you want to delete <%=product?.name %>?');"
                          >Delete</a
                        >
                      </td>
                    </tr>
        
                    <% i++}) %>
                  </tbody>
                </table>

                <!-- table-responsive.// -->
              </div>


            
           
        </div> <!-- card-body end// -->
    </div> <!-- card end// -->
    <div class="pagination-area mt-30 mb-50">
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-start">
         

            </ul>
        </nav>
    </div>
</section> <!-- content-main end// -->

