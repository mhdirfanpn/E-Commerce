<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Banners</h2>

        </div>
        <div>

            <a href="/admin/add-banner" class="btn btn-primary btn-sm rounded">Add Banner</a>
        </div>
    </div>
    <% banner?.forEach(banner=>{ %>
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-product-grid">
                <a href="#" class="img-wrap"> <img src="/addBanner/<%=banner?._id %>.jpg" alt="Banner"> </a>
                <div class="info-wrap">
                    <div class="dropdown float-end">
                        <!-- <a class="dropdown-item" href="/admin/editBanner">Edit info</a>
                        <a class="dropdown-item text-danger" href="/admin/deleteBanner/<%=banner?._id %> "   onclick="return confirm('Are you sure you want to delete the banner <%=banner?.name %> ?');">Delete</a> -->
                        <a href="/admin/getBanner/<%=banner?._id %>" class="btn btn-sm btn-brand rounded font-sm mt-15"
                            >Edit</a
                          >
                          <a href="/admin/deleteBanner/<%=banner?._id %>" class="btn btn-sm btn-brand rounded font-sm mt-15" onclick="return confirm('Are you sure you want to delete <%=banner?.name %>?');"
                            >Delete</a
                          >
                    </div>
                    <a class="title"><%=banner?.name %> </a>
                    <a class="title"><%=banner?.description %> </a>
                   
                </div>
            </div> <!-- card-product  end// -->
        </div> <!-- col.// -->

    </div> <!-- row.// -->
    <% }) %>

</section> <!-- content-main end// -->


<script>
    function banner(banId){
        console.log(banId)
        $.ajax({
            url:'change-banner',
            method:'post',
            data:banId,
            success:(response)=>{
                if(response.status){
                    location.reload()
                }
            }
        })
    }
</script>